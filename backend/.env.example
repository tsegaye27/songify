# Environment
NODE_ENV=development

# Server
PORT=8000

# Database
MONGO_URI=mongodb://localhost:27017/songify-dev

# JWT
JWT_SECRET=your-super-secret-jwt-key-here

# Google OAuth (for auth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_CALLBACK_URL=http://localhost:8000/api/auth/google/callback

# Google OAuth (for email)
GOOGLE_CLIENT_ID_NODEMAILER=your-google-client-id-for-email
GOOGLE_CLIENT_SECRET_NODEMAILER=your-google-client-secret-for-email
GOOGLE_REFRESH_TOKEN=your-google-refresh-token
NODEMAILER_OAUTH_REDIRECT_URI=https://developers.google.com/oauthplayground

# Email
APP_EMAIL_ADDRESS=your-app-email@gmail.com

# Mailtrap (for testing emails)
MAILTRAP_HOST=smtp.mailtrap.io
MAILTRAP_PORT=2525
MAILTRAP_EMAIL_USERNAME=your-mailtrap-username
MAILTRAP_EMAIL_PASSWORD=your-mailtrap-password
